<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mentormate.activities.Main3Activity"
    android:background="#ff82ff6c">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity1"
        android:id="@+id/btn3Activity1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:background="#ffff8191" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity2"
        android:id="@+id/btn3Activity2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn3Activity1"
        android:layout_alignStart="@+id/btn3Activity1"
        android:background="#ff7979ff" />
</RelativeLayout>
