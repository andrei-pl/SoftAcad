<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mentormate.activities.MainActivity1"
    android:background="#ff000000">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity1"
        android:id="@+id/btnMainActivity1"
        android:layout_marginTop="58dp"
        android:background="#ffff94a0"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity2"
        android:id="@+id/btnMainActivity2"
        android:background="#ff83ff76"
        android:layout_below="@+id/btnMainActivity1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_activity3"
        android:id="@+id/btnMainActivity3"
        android:background="#ff989fff"
        android:layout_below="@+id/btnMainActivity2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/color_picker"
        android:id="@+id/btnColorPicker"
        android:layout_below="@+id/btnMainActivity3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
