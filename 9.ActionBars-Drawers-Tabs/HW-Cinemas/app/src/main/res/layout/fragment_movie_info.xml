<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtMovieNameInfo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="170dp"
                android:id="@+id/moviePicInfo"
                android:layout_below="@+id/txtMovieNameInfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/available_seats"
                android:id="@+id/txtAvailableSeats"
                android:layout_below="@id/moviePicInfo"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/txtSeats"
                android:layout_below="@+id/moviePicInfo"
                android:layout_alignRight="@+id/txtAvailableSeats"
                android:layout_marginTop="15dp"
                android:layout_marginRight="-30dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book tickets now"
                android:id="@+id/btnBookTickets"
                android:layout_below="@+id/txtAvailableSeats"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>